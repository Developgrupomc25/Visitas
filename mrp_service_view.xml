<?xml version = "1.0" encoding = "utf-8"?>
<openerp>
	<data>
<!--============VISTA DE LISTA AL INICIO DE EL MODULO=================-->
		<record id="mrp_service_all_tree" model="ir.ui.view">
			<field name="name">mrp_service.all.tree</field>
			<field name="model">mrp_service.all</field>
			<field name="arch" type="xml">
			    <tree string="lista de servicios">
					<field name="name"/>
					<field name="visit"/>
					<field name="date"/>
					
				</tree>
			</field>
		</record>
<!--====================FORMULARIO INICIO==========================-->
		<record id="mrp_service_all_form" model="ir.ui.view">
			<field name="name">mrp_service.all.form</field>
			<field name="model">mrp_service.all</field>
		   	<field name="arch" type="xml">
				<form string="formulario servicios" version="7.0">
					<header></header>
					<sheet>
					<group col="2">
					  	<h1>Visitas</h1>
					
					</group>
					<group col="4">
						<field name="name"/>
						<field name="visit"/>
						<field name="reason"/>
						<field name="date"/>
						
					</group>
				    <group colspan="2" col="1">
                       
                            <field name="photo" widget='image' nolabel="1"/>
                    </group>
                    <group col="4">   
                            <field name="photo_card" widget='image' nolabel="1"/>
                     </group>
                     <group col="4">     
                            <field name="photo_car" widget='image' nolabel="1"/>
                    </group>
					
				</sheet>
			</form>
		</field>
	</record>
<!--=========VISTA DE CALENDARIO AL INICIO DE EL MODULO=============-->
		<record id="_mrp_service_all_calendar" model="ir.ui.view">
            <field name="name">mrp_service.all.calendar</field>
            <field name="model">mrp_service.all</field>
            <field name="arch" type="xml">
        <calendar color="name" date_start="date" string="VISITANTES">
    	        <field name="name"/>
				<field name="date"/>
        </calendar>
    </field>
</record>

<!--================================ACCION============================-->
	<record id="mrp_service_all_action" model="ir.actions.act_window">
			<field name="name">Servicios</field>
			<field name="res_model">mrp_service.all</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,calendar</field>
	</record>
<!--=================================MENU=============================-->
<menuitem id="mrp_service_all_menu" name="Visitantes"/>
<menuitem id="submenu_mrp_service_all" parent="mrp_service_all_menu" name="Prueba del modulo" sequence="0"/>
<menuitem id="submenu_mrp_service_all_action" parent="submenu_mrp_service_all" name="visitas" sequence="0" action="mrp_service_all_action"/>

	</data>
</openerp>