<?xml version = "1.0" encoding = "utf-8"?>
<openerp>
	<data>
<!--============VISTA DE LISTA AL INICIO DE EL MODULO=================-->
		<record id="mrp_service_all_tree" model="ir.ui.view">
			<field name="name">mrp_service.all.tree</field>
			<field name="model">mrp_service.all</field>
			<field name="arch" type="xml">
			    <tree string="lista de visitas">
					<field name="name"/>
					<field name="visit"/>
					<field name="date"/>
					<field name="date_out"/>
					
				</tree>
			</field>
		</record>
<!--====================FORMULARIO INICIO==========================-->
		<record id="mrp_service_all_form" model="ir.ui.view">
			<field name="name">mrp_service.all.form</field>
			<field name="model">mrp_service.all</field>
		   	<field name="arch" type="xml">
				<form string="formulario visitas" version="7.0">
					<header></header>
					<sheet>
					<group col="2">
					  	<h1>Visitas</h1>
					
					</group>
					<group col="4">
						
						
						<field name="name"/>
						<field name="visit"/>
						<field name="reason"/>
						<field name="equipo"/>
					</group>
					
					<group>
						
						<field name="date"/>
						<field name="date_out"/>
						
				    </group>
						
				    <group>
                       
                            <field name="image_medium" widget='image' class="oe_left oe_avatar"/>
                    </group>
                    <group>
                       
                            <field name="image_small" widget='image' class="oe_left oe_avatar"/>
                    </group>
                    <group>
                       
                            <field name="image_small" widget='image' class="oe_left oe_avatar"/>
                    </group>
                    
					
				</sheet>
			</form>
		</field>
	</record>
<!--=========VISTA DE CALENDARIO AL INICIO DE EL MODULO=============-->
		<record id="_mrp_service_all_calendar" model="ir.ui.view">
            <field name="name">mrp_service.all.calendar</field>
            <field name="model">mrp_service.all</field>
            <field name="arch" type="xml">
        <calendar color="name" date_start="date" string="VISITANTES">
    	        <field name="name"/>
				<field name="date"/>
        </calendar>
    </field>
</record>

<!--================================ACCION============================-->
	<record id="mrp_service_all_action" model="ir.actions.act_window">
			<field name="name">Visitas</field>
			<field name="res_model">mrp_service.all</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,calendar</field>
	</record>
<!--=================================MENU=============================-->
<menuitem id="mrp_service_all_menu" name="Visitantes"/>
<menuitem id="submenu_mrp_service_all" parent="mrp_service_all_menu" name="Visitantes" sequence="0"/>
<menuitem id="submenu_mrp_service_all_action" parent="submenu_mrp_service_all" name="visitas" sequence="0" action="mrp_service_all_action"/>

	</data>
</openerp>